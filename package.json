{
  "name": "tresor-oklm",
  "version": "0.0.1",
  "description": "tr√©sor de famille application",
  "scripts": {
    "start": "nodemon dist/application/server.js",
    "watch": "tsc && concurrently \"tsc -w\" \"yarn run start\"",
    "prettier": "prettier --write . --ignore-unknown",
    "migrate": "ts-node ./src/application/migrate.ts",
    "test": "jest",
    "lint": "eslint -c ./eslintrc.js src",
    "db": "docker-compose down --remove-orphans && docker-compose up -d",
    "db:test": "export NODE_ENV=test && export COMPOSE_PROJECT_NAME=oklm_tests && docker-compose down --remove-orphans && docker-compose -f ./docker-compose-integration.yml up -d && until docker exec oklm_db_tests pg_isready -U test -d oklm_test; do sleep 1; done && yarn migrate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paduc/tresor-oklm.git"
  },
  "packageManager": "yarn@1.22.17",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/pg": "^8.6.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "express": "^4.17.2",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "yarn": "^1.22.17"
  }
}
