{
  "name": "tresor-de-famille",
  "version": "1.0.0",
  "description": "trÃ©sor de famille application",
  "scripts": {
    "build": "tsc && yarn build:front && yarn build:css && cp -r src/assets dist && yarn migrate",
    "start": "node dist/index.js",
    "build:front": "webpack --config=webpack.config.js",
    "watch:front": "webpack --config=webpack.config.js --watch",
    "watch": "tsc && cp -r src/assets dist && concurrently \"tsc -w\" \"yarn run start\" \"yarn watch:front\" \"yarn watch:css\" ",
    "build:css": "npx tailwindcss -i ./src/pages/style.css -o ./dist/assets/style.css",
    "watch:css": "yarn build:css --watch",
    "prettier": "prettier --write . --ignore-unknown",
    "migrate": "ts-node ./src/migrate.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "lint": "eslint -c ./eslintrc.js src",
    "db": "docker compose down --remove-orphans && docker compose up -d",
    "db:test": "export NODE_ENV=test && export COMPOSE_PROJECT_NAME=tdf_tests && docker compose down --remove-orphans && docker compose -f ./docker-compose-integration.yml up -d && until docker exec tdf_db_tests pg_isready -U test -d tdf_test; do sleep 1; done && yarn migrate",
    "storybook": "concurrently \"start-storybook -p 6006\" \"yarn storybook:css\"",
    "storybook:css": "npx tailwindcss -i ./src/pages/style.css -o ./src/assets/style.css --watch",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paduc/tresor-de-famille.git"
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@tailwindcss/forms": "^0.5.2",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.6.5",
    "@types/react": "^17.0.38",
